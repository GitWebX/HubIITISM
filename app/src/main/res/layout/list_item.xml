<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:autoLink="web"
                tools:text="Recently, we were given the opportunity to represent IIT(ISM)- Dhanbad in the first ever inter IIT cultural meet organised at IIT Bombay.\nWe take pride in announcing that one of our society members, Om Dwivedi, brought laurels to the entire IIT(ISM) fraternity by bagging the second prize with this stupendous performance. He was superbly supported by Rajesh Kumar on guitar.\n\nP.S: Please use earphones/headphones for better listening experience." />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:text="Mar 6, 2010" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:text="3:00 PM" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
